CPP = g++
TARGET = gravebot_mm
ARCHFLAG = i586
BASEFLAGS = -Dstricmp=strcasecmp -Dstrcmpi=strcasecmp -DMETAMOD_BUILD
OPTFLAGS = 
CPPFLAGS = ${BASEFLAGS} ${OPTFLAGS} -march=${ARCHFLAG} -O2 -w -I"../common" -I"../dlls" -I"../engine" -I"../pm_shared" -I"../metamod" 

OBJ = 	bot.o \
	bot_client.o \
	bot_combat.o \
	bot_navigate.o \
	bot_start.o \
	bot_weapons.o \
	bot_weapons_hldm.o \
	bot_weapons_si.o \
	dll.o \
	engine.o \
	h_export.o \
	util.o \
	waypoint.o

${TARGET}_i386.so: ${OBJ}
	${CPP} -fPIC -shared -static -o $@ ${OBJ} -Xlinker -Map -Xlinker ${TARGET}.map -ldl
	strip -s ${TARGET}_i386.so 
	mv *.o Release_Metamod
	mv *.map Release_Metamod
	mv $@ Release_Metamod

clean:
	rm -f Release_Metamod/*.o
	rm -f Release_Metamod/*.map

distclean:
	rm -rf Release_Metamod
	mkdir Release_Metamod	

%.o:	%.cpp
	${CPP} ${CPPFLAGS} -c $< -o $@

%.o:	%.c
	${CPP} ${CPPFLAGS} -c $< -o $@