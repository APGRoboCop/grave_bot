CPP = g++
TARGET = gravebot
ARCHFLAG = i586
BASEFLAGS = -Dstricmp=strcasecmp -Dstrcmpi=strcasecmp
OPTFLAGS = 
CPPFLAGS = ${BASEFLAGS} ${OPTFLAGS} -march=${ARCHFLAG} -O2 -w -I"../metamod" -I"../common" -I"../dlls" -I"../engine" -I"../pm_shared"

OBJ = 	bot.o \
	bot_client.o \
	bot_combat.o \
	bot_navigate.o \
	bot_start.o \
	bot_weapons.o \
	bot_weapons_hldm.o \
	bot_weapons_si.o \
	dll.o \
	engine.o \
	h_export.o \
	linkfunc.o \
	util.o \
	waypoint.o

${TARGET}_i386.so: ${OBJ}
	${CPP} -fPIC -shared -static -o $@ ${OBJ} -Xlinker -Map -Xlinker ${TARGET}.map -ldl
	strip -s ${TARGET}_i386.so 
	mv *.o Release
	mv *.map Release
	mv $@ Release

clean:
	rm -f Release/*.o
	rm -f Release/*.map

distclean:
	rm -rf Release
	mkdir Release	

%.o:	%.cpp
	${CPP} ${CPPFLAGS} -c $< -o $@

%.o:	%.c
	${CPP} ${CPPFLAGS} -c $< -o $@